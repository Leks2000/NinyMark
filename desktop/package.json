{
    "name": "ninyra-watermark-desktop",
    "productName": "NinyraWatermark",
    "private": true,
    "version": "1.0.0",
    "description": "NinyraWatermark Desktop — Smart watermark placement for anime/AI images",
    "author": "Ninyra <patreon.com/Ninyra>",
    "main": "electron/main.js",
    "scripts": {
        "dev": "concurrently --names \"VITE,ELECTRON\" --prefix-colors \"cyan,yellow\" \"npm run vite\" \"npm run electron-dev\"",
        "vite": "vite --port 3000",
        "electron-dev": "wait-on http://localhost:8765/health && electron .",
        "build": "npm run build:frontend && npm run build:electron",
        "build:frontend": "tsc -b && vite build",
        "build:electron": "electron-builder --win --x64",
        "build:backend": "cd ../backend && pyinstaller --onefile --name backend --distpath ../desktop/resources/backend --workpath ../desktop/build-tmp/pyinstaller --specpath ../desktop/build-tmp main.py",
        "build:all": "npm run build:backend && npm run build:frontend && npm run build:electron",
        "preview": "vite preview"
    },
    "dependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "framer-motion": "^11.15.0",
        "lucide-react": "^0.468.0",
        "react-dropzone": "^14.3.5",
        "sonner": "^1.7.2"
    },
    "devDependencies": {
        "@types/react": "^18.3.14",
        "@types/react-dom": "^18.3.2",
        "@vitejs/plugin-react": "^4.3.4",
        "autoprefixer": "^10.4.20",
        "concurrently": "^8.2.2",
        "electron": "^33.3.1",
        "electron-builder": "^25.1.8",
        "postcss": "^8.4.49",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.7.2",
        "vite": "^6.0.5",
        "vite-plugin-electron": "^0.28.8",
        "vite-plugin-electron-renderer": "^0.14.6",
        "wait-on": "^8.0.1"
    },
    "build": {
        "appId": "com.ninyra.watermark",
        "productName": "NinyraWatermark",
        "copyright": "Copyright © 2024 Ninyra",
        "directories": {
            "output": "dist-electron",
            "buildResources": "build-resources"
        },
        "files": [
            "dist/**/*",
            "electron/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "resources/backend",
                "to": "backend",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "../assets",
                "to": "assets",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "requestedExecutionLevel": "asInvoker"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "allowElevation": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "NinyraWatermark"
        },
        "mac": {
            "target": "dmg",
            "category": "public.app-category.photography"
        },
        "linux": {
            "target": "AppImage",
            "category": "Graphics"
        }
    }
}